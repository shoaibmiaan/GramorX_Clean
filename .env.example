# See docs/setup/environment.md for field-by-field guidance.

# ===== Core =====
NODE_ENV=development
SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Optional: client base URL if your app reads it
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ===== Supabase (required if using Supabase) =====
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ===== OpenAI / LLMs (pick what you use) =====
GX_AI_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_WRITING_MODEL=
OPENAI_SPEAKING_MODEL=
GOOGLE_GENERATIVE_AI_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=
GROQ_MODEL=

# ===== Payments (optional) =====
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ===== Twilio (optional for phone/WhatsApp) =====
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
TWILIO_WHATSAPP_FROM=
# Dev helper: bypass Twilio checks locally
TWILIO_BYPASS=true
NEXT_PUBLIC_TWILIO_BYPASS=true

# ===== Misc / Limits (optional) =====
LIMIT_FREE_READING=20
LIMIT_FREE_LISTENING=10
LIMIT_FREE_SPEAKING=2

# ===== Validation control (optional) =====
# Set to "true" in Preview/Dev to avoid failing builds when some secrets are absent
SKIP_ENV_VALIDATION=false
